extends layout


block content

  h1 Author: #{author.name}
  p #[strong Birth: ] #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}
   div(style='margin-left:20px;margin-top:20px')
    h4 Books
    if books_list.length
      dl
        each book in books_list
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This author has no books. 
